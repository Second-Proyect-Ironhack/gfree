<div id="addproduct">
  <div class="col-md-4 col-md-offset-4">
    <h2>Add a product</h2>
<form action="/<%= placeId %>/add/product/<%= placeName %>" method="post"  enctype="multipart/form-data" >
  <div class="form-group">
  <label for="name">Name</label>
  <input type="text" class="form-control" name="name" value="">
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea name="description" class="form-control" cols="20" rows="10"></textarea>
</div>
<div class="form-group">
  <label for="picture">Picture</label>
  <input type="file" class="form-control" name="picture" value=""><br><br>
</div>
<input type="submit" name="" class="btn-default" value="Add">
</form>
</div>
</div>
