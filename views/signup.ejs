<div id="signup">
  <div class="col-md-4 col-md-offset-4">
<h2>SignUp</h2>

<form action="/signup" method="POST" id="form-container" enctype="multipart/form-data">
  <div class="form-group">
  <label for="username">Username</label>
  <input id="username" type="text"  class="form-control" name="username" placeholder="Your name">
  <br><br>
</div>
<div class="form-group">
  <label for="email">Email</label>
  <input id="email" type="email" class="form-control" name="email" placeholder="@email">
  <br><br>
</div>
  <div class="form-group">
  <label for="password">Password</label>
  <input id="password" type="password" class="form-control" name="password" placeholder="Your password">
</div>
  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>
  <br><br>
  <div class="form-group">
  <label for="picture">Profile picture</label>
  <input id="picture" type="file" class="form-control" name="picture">
  <br><br>
</div>
  <button class="btn btn-default">Create account</button>
</form>
  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</div>
</div>
