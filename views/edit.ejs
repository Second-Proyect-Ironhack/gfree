<div id="edit-body">
  <div class="row">
  <div class="col s12 m4 l4"></div>
  <div class="col s12 m4 l4">
<h2>Edit your account</h2>

<form action="/<%= user._id %>/edit" method="POST" id="form-container" enctype="multipart/form-data">
  <div class="form-group">
  <label for="username">Username</label>
  <input id="username" type="text" class="input-field" name="username" value="<%= user.username %>">
  <br><br>
</div>
<div class="form-group">
  <label for="email">Email</label>
  <input id="email" type="email" name="email" value="<%= user.email %>">
  <br><br>
</div>
<div class="form-group">
  <label for="password">Password</label>
  <input id="password" type="password" name="password" value="<%= user.password %>">
  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>
  <br><br>
  </div>
  <div class="form-group">
  <label for="picture">Profile picture</label>
  <input id="picture" type="file" name="filename" value="<%= user.picture.pic_name %>">
  <br><br>
</div>

  <button class="waves-effect waves-light btn">Save changes</button>
</div>
<div class="col s12 m4 l4"></div>
</div>
</div>
